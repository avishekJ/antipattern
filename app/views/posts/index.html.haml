%h1 
  Listing posts
  = link_to 'New Post', new_post_path, :class=>"btn btn-xs btn-primary"
%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Content
      %th Author
      %th Visibility
      %th Category
      %th
      %th
      %th
      
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.content.html_safe
        %td= post.author_id
        %td= post.visible
        %td= post.category_id
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br


