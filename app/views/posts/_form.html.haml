= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title
    = f.text_field :title, :class=>"form-control"
  .form-group
    = f.label :content
    = f.bootsy_area :content, :class=>"form-control", :rows => 10
  .form-group
    = f.label :category_id
    = f.select :category_id, options_for_select(@categories.map{ |cat| [cat.name, cat.id] }), :required=>true
  .checkbox
    %label
      = f.check_box :visible
      Visible
  %button.btn.btn-success{:type => "submit"} Submit

